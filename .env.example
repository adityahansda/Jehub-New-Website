# Set to 'true' to enable coming soon/maintenance mode (routes all traffic to coming soon page)
# Set to 'false' or remove to disable maintenance mode
NEXT_PUBLIC_COMING_SOON_MODE=false
NEXT_PUBLIC_MAINTENANCE_MODE=false
